{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "proofpack://receipts/verify",
  "allOf": [{"$ref": "_base.schema.json"}],
  "properties": {
    "receipt_type": {"const": "verify"},
    "target_receipt_id": {"type": "string"},
    "merkle_root": {"type": "string"},
    "proof_valid": {"type": "boolean"},
    "proof_path": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "hash": {"type": "string"},
          "position": {"enum": ["left", "right"]}
        }
      }
    }
  },
  "required": ["target_receipt_id", "proof_valid"]
}
