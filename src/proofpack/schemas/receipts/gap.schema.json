{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "proofpack://receipts/gap",
  "allOf": [{"$ref": "_base.schema.json"}],
  "properties": {
    "receipt_type": {"const": "gap"},
    "gap_id": {"type": "string"},
    "problem_type": {"type": "string"},
    "time_to_resolve_ms": {"type": "integer"},
    "resolution_steps": {
      "type": "array",
      "items": {"type": "string"}
    },
    "could_automate": {"type": "boolean"},
    "automation_confidence": {"type": "number", "minimum": 0, "maximum": 1}
  },
  "required": ["problem_type", "time_to_resolve_ms", "could_automate"]
}
